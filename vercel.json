{
  "version": 2,
  "buildCommand": "echo 'No build needed for API-only project'",
  "outputDirectory": "public",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/welcome",
      "destination": "/api/welcome"
    },
    {
      "source": "/welcome.html",
      "destination": "/api/welcome"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
